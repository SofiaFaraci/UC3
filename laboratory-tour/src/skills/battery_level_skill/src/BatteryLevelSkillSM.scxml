<scxml initial="idle" version="1.0" name="BatteryLevelSkillCondition" datamodel="ecmascript" xmlns="http://www.w3.org/2005/07/scxml">
    <datamodel>
        <data id="percentage" expr="100"/>
    </datamodel>
    <!-- BatteryLevelSkill is a server for tick from the ROS2Condition plugin-->
    <!-- BatteryLevelSkill is a subscriber for the /battery_status topic from the BatteryComponent-->
    <state id="idle">
        <transition target="areFollowing" event="CMD_TICK"/>
        <transition target="idle" event="BatteryComponent.battery_status.Sub">
            <assign location="percentage" expr="_event.data.percentage"/>
        </transition>
    </state>
    <state id="areFollowing">
        <onentry>
            <if cond="percentage &gt; 30">
                <send event="TICK_RESPONSE">
                    <param name="result" expr="&quot;SUCCESS&quot;"/>
                </send>
                <else/>
                <send event="TICK_RESPONSE">
                    <param name="result" expr="&quot;FAILURE&quot;"/>
                </send>
            </if>
        </onentry>
        <transition target="idle"/>
    </state>
</scxml>
