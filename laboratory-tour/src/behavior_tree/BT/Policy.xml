<?xml version="1.0"?>
<root main_tree_to_execute="BehaviorTree">
    <!-- ////////// -->
    <BehaviorTree ID="BatteryManagment">
        <ReactiveFallback>
            <Condition ID="ROS2Condition" name="BatteryLevel"/>
            <Action ID="ROS2Action" name="Alarm"/>
        </ReactiveFallback>
    </BehaviorTree>
    <!-- ////////// -->
    <BehaviorTree ID="BehaviorTree">
        <ReactiveSequence>
            <SubTree ID="BatteryManagment"/>
            <SubTree ID="PoiScheduler"/>
            <SubTree ID="GoToPoi"/>
        </ReactiveSequence>
    </BehaviorTree>
    <!-- ////////// -->
    <BehaviorTree ID="GoToPoi">
        <Action ID="ROS2Action" name="SetCurrentPoiDone"/>
    </BehaviorTree>
    <!-- ////////// -->
    <BehaviorTree ID="PeopleFollowing">
        <ReactiveFallback name="">
            <Condition ID="ROS2Condition" name="VisitorsFollowingRobot"/>
            <ReactiveSequence>
                <Action ID="ROS2Action" name="RunTimer"/>
                <Action ID="ROS2Action" name="Wait"/>
            </ReactiveSequence>
        </ReactiveFallback>
    </BehaviorTree>
    <!-- ////////// -->
    <BehaviorTree ID="PoiScheduler">
        <Fallback>
            <Sequence>
                <Inverter>
                    <Condition ID="ROS2Condition" name="IsPoiDone1"/>
                </Inverter>
                <Action ID="ROS2Action" name="SetPoi1"/>
            </Sequence>
            <Sequence>
                <Inverter>
                    <Condition ID="ROS2Condition" name="IsPoiDone2"/>
                </Inverter>
                <Action ID="ROS2Action" name="SetPoi2"/>
            </Sequence>
        </Fallback>
    </BehaviorTree>
    <!-- ////////// -->
    <TreeNodesModel>
        <SubTree ID="BatteryManagment"/>
        <SubTree ID="GoToPoi"/>
        <SubTree ID="PeopleFollowing"/>
        <SubTree ID="PoiScheduler"/>
        <Action ID="ROS2Action"/>
        <Condition ID="ROS2Condition"/>
    </TreeNodesModel>
    <!-- ////////// -->
</root>

