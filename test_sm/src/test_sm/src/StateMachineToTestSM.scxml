<scxml 
  initial="idle" 
  version="1.0" 
  name="StateMachineToTestSM"
  datamodel="cplusplus:TestStateMachineDataModel:TestStateMachineDataModel.h"
  xmlns="http://www.w3.org/2005/07/scxml">

    <state id="idle">
      <onentry>

      <script>
       log("state idle");
       </script>
                    <send event="SEND_OUTSIDE">
      </send>
      </onentry>

      <transition event="CMD_START" target="ready" />
    </state>

    <state id="ready">
          <onentry>
      <script>
       log("state ready");
       </script>
              <send event="SEND_OUTSIDE">
      </send>
      </onentry>
          <!-- <log expr="state ready"/> -->
      <transition event="CMD_ALARM" target="alarm" />
      <transition event="CMD_HALT" target="idle" />
    </state>


    <state id="alarm">
          <onentry>
      <script>
       log("state alarm");
       </script>
      </onentry>
              <!-- <log expr="state alarm"/> -->
      <transition event="CMD_HALT" target="idle" />
    </state>
</scxml>

